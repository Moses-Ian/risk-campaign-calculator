<?xml version="1.0" encoding="utf-8"?>
<resources>    
	<style name="b1">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">16sp</item>
	</style>
	<style name="h1" parent="@style/b1">        
		<item name="android:textColor">@color/orange</item><!-- orange -->
	</style>
	<style name="editNumber">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:inputType">number</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:gravity">center</item>
		<item name="android:padding">3dip</item>
		<item name="android:background">@color/orange_editbox</item>
		<item name="android:selectAllOnFocus">true</item>
	</style>
		<!-- item name="android:background">@android:drawable/editbox_background</item -->
	<style name="calculateButton">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:gravity">center</item>
		<item name="android:padding">3dip</item>
		<item name="android:textSize">16sp</item>
		<item name="android:text">@string/calculate</item>
		<item name="android:background">@color/orange_button</item>
	</style>
</resources>

