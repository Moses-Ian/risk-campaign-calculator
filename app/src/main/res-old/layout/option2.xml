<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res/net.phoenixramen.risk"
		style="@style/b1"
		android:orientation="vertical">
	<LinearLayout
			style="@style/b1"
			android:orientation="horizontal">
		<Button
			android:id="@+id/calculate2"
			style="@style/calculateButton" 
			android:layout_width="wrap_content"
			android:layout_weight="1" />
		<Button
			android:id="@+id/add2"
			style="@style/calculateButton"
			android:text="@string/add"
			android:layout_width="wrap_content"
			android:layout_weight="1" />
		<Button
			android:id="@+id/clear2"
			style="@style/calculateButton"
			android:text="@string/clear"
			android:layout_width="wrap_content"
			android:layout_weight="1" />
	</LinearLayout>
	<LinearLayout
			style="@style/b1"
			android:orientation="horizontal"
			android:layout_width="fill_parent">
		<TextView
			style="@style/h1"
			android:text="@string/attackers"
			android:padding="5dip"
			android:gravity="center"
			android:layout_weight="1"
			android:layout_width="wrap_content" />
		<TextView
			style="@style/h1"
			android:text="@string/defenders"
			android:padding="5dip"
			android:gravity="center"
			android:layout_weight="1"
			android:layout_width="wrap_content" />
		<TextView
			style="@style/h1"
			android:text="@string/odds1"
			android:padding="5dip"
			android:gravity="center"
			android:layout_weight="1"
			android:layout_width="wrap_content" />
		<TextView
			style="@style/h1"
			android:text="@string/remaining1"
			android:padding="5dip"
			android:gravity="center"
			android:layout_weight="2"
			android:layout_width="wrap_content" />
	</LinearLayout>
	<ScrollView
			android:id="@+id/scroll2"
			style="@style/b1" >
		<LinearLayout
				android:id="@+id/linear2"
				style="@style/b1"
				android:orientation="vertical">
		</LinearLayout>
	</ScrollView>
</LinearLayout>