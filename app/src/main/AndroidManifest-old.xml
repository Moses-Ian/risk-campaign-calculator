<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="net.phoenixramen.risk"
	android:versionCode="4"
	android:versionName="1.1">
	<uses-permission android:name="android.permission.VIBRATE"/>
	<uses-sdk android:minSdkVersion="3" />
    <supports-screens android:resizeable="true"
		android:smallScreens="true"
		android:normalScreens="true"
		android:largeScreens="true"
		android:anyDensity="true"/>
				  
	<application android:label="@string/app_name" 
			android:icon="@drawable/ic_launcher"
			android:debuggable="false">
<!-- set debuggable to false to build in release mode -->

		<activity android:name="risk"
			android:label="@string/app_name">
            
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity android:name="option0"
			android:windowSoftInputMode="stateVisible">
		</activity>
		
		<activity android:name="option1"
			android:windowSoftInputMode="stateVisible">
		</activity>
		
		<activity android:name="option2"
			android:windowSoftInputMode="adjustPan|stateVisible">
			<!--android:windowSoftInputMode="stateVisible|adjustResize"-->
		</activity>
		
		<activity android:name="Help">
		</activity>
		
		<activity android:name="RiskPreferences">
		</activity>
		
	</application>
</manifest> 
